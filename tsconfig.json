{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node" ,
    "baseUrl": "./src",
    "paths": {
      "@roles/*": ["roles/*"],
      "@utils/*": ["utils/*"],
      "@structures/*": ["structures/*"],
      "@managers/*": ["managers/*"]
    },                            
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
